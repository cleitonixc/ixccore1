{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFiles": ["<rootDir>/setup.ts"],
  "coverageDirectory": "../coverage-e2e",
  "coverageReporters": ["text", "lcov", "json-summary"],
  "collectCoverageFrom": [
    "../src/**/*.ts",
    "!../src/**/*.module.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.dto.ts",
    "!../src/**/*.entity.ts",
    "!../src/main.ts"
  ]
}
